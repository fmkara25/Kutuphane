@{
    var title = ViewData["Title"] as string ?? "Kutuphane";
}

<!DOCTYPE html>
<html lang="tr" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Kutuphane</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
</head>
<body>
    <header class="border-bottom mb-3">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-journal-bookmark"></i> Kutuphane
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.Value?.StartsWith("/Books") == true ? "active" : "")"
                               asp-controller="Books" asp-action="Index">
                                <i class="bi bi-bookshelf me-1"></i> Kitaplar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Books" asp-action="Create">
                                <i class="bi bi-plus-lg me-1"></i> Yeni Kitap
                            </a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <button id="themeToggle" class="btn btn-sm btn-outline-secondary" type="button" title="Tema değiştir">
                            <i class="bi bi-moon-stars" id="themeIcon"></i>
                        </button>
                        <a class="btn btn-sm btn-primary" asp-controller="Home" asp-action="Privacy">
                            <i class="bi bi-info-circle me-1"></i> Hakkında
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top py-3">
        <div class="container small text-muted d-flex justify-content-between">
            <span>© @DateTime.Now.Year Kutuphane</span>
            <span>ASP.NET Core MVC • Bootstrap 5.3</span>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>

    <script>
        // ---- Tema (light/dark) ----
        (function () {
            const key = 'theme';
            const doc = document.documentElement;
            const icon = document.getElementById('themeIcon');
            const btn = document.getElementById('themeToggle');

            function apply(theme) {
                doc.setAttribute('data-bs-theme', theme);
                localStorage.setItem(key, theme);
                if (icon) icon.className = theme === 'dark' ? 'bi bi-moon-stars' : 'bi bi-sun';
            }

            const saved = localStorage.getItem(key) || 'dark';
            apply(saved);

            if (btn) {
                btn.addEventListener('click', function () {
                    const current = doc.getAttribute('data-bs-theme') || 'dark';
                    apply(current === 'dark' ? 'light' : 'dark');
                });
            }
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
